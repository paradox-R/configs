call plug#begin('~/.vim/plugged')
	Plug 'joshdick/onedark.vim'
	Plug 'sheerun/vim-polyglot'
	Plug 'ap/vim-css-color'
	Plug 'scrooloose/nerdtree'
	Plug 'vim-syntastic/syntastic'
call plug#end()            

filetype plugin indent on
syntax on
set autoread
set clipboard=unnamedplus
set mouse=a
set noshowmode
set wildmenu
"set ruler rulerformat=%15(%c%V\ %p%%%)
set number relativenumber
set colorcolumn=110
set encoding=UTF-8
set splitright splitbelow 
set tabstop=4 softtabstop=4 shiftwidth=4 noexpandtab
set smartcase
set autoindent
set spell spelllang=en
set hlsearch is
set laststatus=2
set cmdheight=1
set cursorline
set backspace=indent,eol,start
set lazyredraw
"set list listchars=tab:¬ª\ ,eol:¬¨,extends:‚ùØ,precedes:‚ùÆ
set directory=$XDG_CACHE_HOME/vim/swap,~/.vim,/tmp
set backupdir=$XDG_CACHE_HOME/vim/backup,~/,/tmp
set undodir=$XDG_CACHE_HOME/vim/undo,~/,/tmp
set viminfo+='1000,n$XDG_DATA_HOME/vim/viminfo
"set runtimepath=$XDG_CONFIG_HOME/vim/,$XDG_CONFIG_HOME/vim/after,$VIM,$VIMRUNIME

runtime macros/matchit.vim

"ColorScheme 
let &t_8f = "[38;2;%lu;%lu;%lum"
let &t_8b = "[48;2;%lu;%lu;%lum"
set termguicolors
function! Hilites() abort
	highlight StatusLine cterm=bold ctermfg=145 ctermbg=236
	highlight CursorLine term=underline ctermbg=236
	highlight CursorLineNr cterm=bold ctermbg=236
	highlight ColorColumn term=reverse ctermbg=236
	highlight Search term=reverse ctermfg=235 ctermbg=180
	highlight IncSearch term=reverse ctermfg=180 ctermbg=59
	highlight SpellBad term=reverse cterm=underline ctermfg=204
	highlight EndOfBuffer ctermfg=235
endfunction

augroup MyColors
	autocmd!
	autocmd ColorScheme * call Hilites()
augroup END
"autocmd! BufNewFile,BufRead call Hilites()

let g:onedark_hide_endofbuffer=1
let g:onedark_terminal_italics=1

colorscheme onedark

let g:currentmode={
			\ 'n'  : 'Normal ',
			\ 'v'  : 'Visual ',
			\'V'  : 'V¬∑Line ',
			\ ''   : 'V¬∑Block ',
			\ 'i'  : 'Insert ',
			\ 'R'  : 'Replace ',
			\ 'Rv' : 'V¬∑Replace ',
			\ 'c'  : 'Command ',
			\}

let g:syntastic_always_populate_loc_list = 1
let g:syntastic_auto_loc_list = 1
let g:syntastic_check_on_open = 1
let g:syntastic_check_on_wq = 0

let g:NERDTreeDirArrowExpandable = '‚ñ∏'
let g:NERDTreeDirArrowCollapsible = '‚ñæ'

set statusline=
set statusline+=\ %02n\ ‚ùØ
set statusline+=\ %{toupper(g:currentmode[mode()])}‚ùØ
set statusline+=\ %t								"tail of the filename
set statusline+=%{&modified?'\ [+]':''}\ 			"modified flag
set statusline+=%{&readonly?'\ [RO]\ ':''}			"read only flag
set statusline+=%<
set statusline+=%=									"left/right separator
set statusline+=%{&ff}\ 							"file format
set statusline+=[%{strlen(&fenc)?&fenc:'none'}]\ 	"file encoding
set statusline+=%y\ 								"filetype
set statusline+=‚ùÆ\ Ln\ %02l\ Col\ %02c				"Line iNum, Cursor Column
set statusline+=\ ÓÇ°\ %L\ Ô©∞%P						"total lines /Percent through file

set statusline+=\ %#warningmsg#
set statusline+=%{SyntasticStatuslineFlag()}
set statusline+=%*

"Mappings
let mapleader=" "

nnoremap <C-n> :NERDTreeToggle<CR>
nnoremap <C-z> :SyntasticToggleMode<CR>

nnoremap <C-b> :g//#<Left><Left>
nnoremap <F10> :set invpaste<CR>
nnoremap <Leader><Space> :let @/=''<CR>
nnoremap <Leader><left> :vertical resize -5<CR>
nnoremap <Leader><right> :vertical resize +5<CR>
" Split Navigation
nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l
" Tab Navigation
nnoremap <S-l> :tabprevious<CR>
nnoremap <S-h> :tabnext<CR>
" Buffer Navigation
nnoremap <Leader>l :bnext<CR>
nnoremap <Leader>h :bprev<CR>
" Move Lines
nnoremap <S-k> :move .-2<CR>
nnoremap <S-j> :move .+1<CR>

